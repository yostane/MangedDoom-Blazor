<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly" ToolsVersion="Current">
    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ExcludeFoldersFromDeployment>docs</ExcludeFoldersFromDeployment>
        <RunAOTCompilation>true</RunAOTCompilation>
        <!-- https://learn.microsoft.com/en-us/aspnet/core/blazor/tooling?view=aspnetcore-7.0&pivots=windows#net-webassembly-build-tools-1 -->
        <WasmEnableSIMD>true</WasmEnableSIMD>
        <WasmEnableExceptionHandling>true</WasmEnableExceptionHandling>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.*-*" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.*-*" PrivateAssets="all" />
        <PackageReference Include="System.Net.Http.Json" Version="7.*-*" />
    </ItemGroup>
    <ItemGroup>
        <Content Remove="docs\**" CopyToPublishDirectory="Never" />
    </ItemGroup>
</Project>